@model IEnumerable<Games>
@{
    ViewData["Title"] = "Index";
}
<partial name="PopUp"/>
@if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
  {
       <a type="button" class="btn btn-primary" asp-area="" asp-controller="Games" asp-action="Create">Create Games</a>
  }

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
          @foreach(var item in Model)
           {
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">  
                    <div class="card-body">
                         <p class="card-text">@item.GamesName </p>
                         <div class="d-flex justify-content-between align-items-center">
                             <div class="btn-group">
                                 <a type="btn btn-success" class="btn btn-sm btn-outline-info asp-controller="Games" asp-action="Detail" asp-route-id="@item.Id">View</a>
                                 <a type="btn btn-success" class="btn btn-sm btn-outline-info asp-controller="Games" asp-action="Play" asp-route-id="@item.Id">Play Game</a>

                                 @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                         
                                          <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Games" asp-action="Edit" asp-route-id="@item.Id"> Edit </a> 
                                          <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Games" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                                    }
                                </div>
                             <small class="text-muted"></small>
                        </div>
                  </div>
             </div>
            </div>  
           }
      </div>
    </div>
  </div>

